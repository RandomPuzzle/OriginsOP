{
	"name": "Sugar Preference",
	"description": "You can eat sugar using your secondary active and you get absorption from sugary food, but you are less satiated by other foods.",
	"type": "origins:multiple",

	"non_sugary": {
		"type": "origins:modify_food",
		"item_condition": {
			"type": "origins:ingredient",
			"ingredient": {
				"tag": "additional:sugary_food"
			},
			"inverted": true
		},
		"food_modifier": {
			"name": "Sugar Preference food reduction",
			"operation": "multiply_total",
			"value": -0.4
		},
		"saturation_modifier": {
			"name": "Sugar Preference saturation reduction",
			"operation": "multiply_total",
			"value": -0.2
		}
	},

	"sugary": {
		"type": "origins:action_on_item_use",
		"item_condition": {
			"type": "origins:ingredient",
			"ingredient": {
				"tag": "additional:sugary_food"
			}
		},
		"entity_action": {
			"type": "origins:execute_command",
			"command": "effect give @s minecraft:absorption 60"
		}
	},

	"eat_sugar": {
		"type": "origins:active_self",
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:equipped_item_action",
					"equipment_slot": "mainhand",
					"action": {
						"type": "origins:consume",
						"amount": 1
					}
				},
				{
					"type": "origins:feed",
					"food": 1,
					"saturation": 1
				},
				{
					"type": "origins:play_sound",
					"sound": "minecraft:entity.player.burp",
					"pitch": 1.5
				}
			]
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:food_level",
					"comparison": "<",
					"compare_to": 20
				},
				{
					"type": "origins:equipped_item",
					"equipment_slot": "mainhand",
					"item_condition": {
						"type": "origins:ingredient",
						"ingredient": {
							"item": "minecraft:sugar"
						}
					}
				}
			]
		},
		"cooldown": 4,
		"key": {
			"key": "key.origins.secondary_active"
		},
		"hud_render": {
			"should_render": false
		}
	}
}