{

	"type": "origins:action_on_callback",
	"entity_action_added": {
		"type": "origins:and",
		"actions": [{
				"type": "origins:execute_command",
				"command": "scale set pehkui:height 0.25 @s",
				"permission_level": 4
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:width 0.25 @s",
				"permission_level": 4
			}
		]
	},
	"entity_action_lost": {
		"type": "origins:and",
		"actions": [{
				"type": "origins:execute_command",
				"command": "scale reset pehkui:height @s",
				"permission_level": 4
			},
			{
				"type": "origins:execute_command",
				"command": "scale reset pehkui:width @s",
				"permission_level": 4
			}
		]
	},
	"entity_action_respawn": {
		"type": "origins:and",
		"actions": [{
				"type": "origins:execute_command",
				"command": "scale set pehkui:height 0.25 @s",
				"permission_level": 4
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:width 0.25 @s",
				"permission_level": 4
			}
		]
	},
	"execute_chosen_when_orb": true,
	"name": "Small body",
	"description": "You have evolved to be small not to be caught by fishing rods, fishing nets etc."
}