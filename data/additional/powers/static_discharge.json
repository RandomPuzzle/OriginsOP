{
	"name": "Static Discharge",
	"description": "You gain static charge while you are airborne. A lightning strike occurs when you hit someone on the ground, when someone on the ground hits you, or when you land with full charge. (Note: Lightning strikes destroy all items, including netherite.)",
	
	"type": "origins:multiple",
	
	"charge_cooldown": {
		"type": "origins:cooldown",
		"cooldown": 200,
		"hud_render": {
			"should_render": true,
			"bar_index": 2
		}
	},
	
	"touches_ground_charged": {
		"type": "origins:action_over_time",
		"interval": 1,
		"rising_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:trigger_cooldown",
					"power": "additional:static_discharge_charge_cooldown"
				}
			]
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:or",
					"conditions": [
						{
							"type": "origins:in_block_anywhere",
							"block_condition": {
								"type": "origins:block",
								"block": "minecraft:water"
							}
						},
						{
							"type": "origins:on_block"
						}
					]
				},
				{
					"type": "origins:resource",
					"resource": "additional:static_discharge_charge_cooldown",
					"comparison": "==",
					"compare_to": 0
				},
				{
					"type": "origins:resource",
					"resource": "additional:static_discharge_player_hits_ground_entity",
					"comparison": "==",
					"compare_to": 0
				},
				{
					"type": "origins:resource",
					"resource": "additional:static_discharge_ground_entity_hits_player",
					"comparison": "==",
					"compare_to": 0
				},
				{
					"type": "origins:predicate",
					"predicate": "additional:weather_thunderstorm",
					"inverted": true
				}
			]
		}
	},
	
