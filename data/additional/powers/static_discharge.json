		},
		"target_condition": {
			"type": "origins:or",
			"conditions": [
				{
					"type": "origins:in_block",
					"block_condition": {
						"type": "origins:block",
						"block": "minecraft:water"
					}
				},
				{
					"type": "origins:on_block"
				},
				{
					"type": "origins:command",
					"command": "data get entity @s RootVehicle.Entity.OnGround",
					"comparison": "==",
					"compare_to": 1,
					"permission_level": 2
				},
				{
					"type": "origins:command",
					"command": "execute at @s as @e[type=spider,nbt={OnGround:1b},sort=nearest,limit=1] if data entity @s Passengers",
					"comparison": "==",
					"compare_to": 1,
					"permission_level": 2
				}
			]
		},
		"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:damage",
					"amount": 40,
					"source": {
						"name": "lightningBolt",
						"bypasses_armor": true,
						"unblockable": true,
						"out_of_world": true
					}
				},
				{
					"type": "origins:execute_command",
					"command": "summon minecraft:lightning_bolt ~ ~ ~",
					"permission_level": 2
				},
				{
					"type": "origins:trigger_cooldown",
					"power": "additional:static_discharge_ground_entity_hits_player"
				},
				{
					"type": "origins:trigger_cooldown",
					"power": "additional:static_discharge_charge_cooldown"
				}
			]
		},
		"cooldown": 200,
		"hud_render": {
			"should_render": true,
			"bar_index": 2
		}
	},
	
